@model Personal

<h2>Editar Personal</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.NumeroDocumento)

    <div class="form-group">
        @Html.LabelFor(m => m.Nombres)
        @Html.TextBoxFor(m => m.Nombres, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Apellidos)
        @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FechaNacimiento)
        @Html.TextBoxFor(m => m.FechaNacimiento, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FechaIngreso)
        @Html.TextBoxFor(m => m.FechaIngreso, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CodigoCargo)
        @Html.TextBoxFor(m => m.CodigoCargo, new { @class = "form-control" })
    </div>

    <input type="submit" value="Actualizar" class="btn btn-primary" />
}
